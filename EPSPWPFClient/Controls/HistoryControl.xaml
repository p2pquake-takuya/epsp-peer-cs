<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EPSPWPFClient.Controls"
             xmlns:ViewModel="clr-namespace:EPSPWPFClient.ViewModel" x:Class="EPSPWPFClient.Controls.HistoryControl"
             mc:Ignorable="d" 
             MinWidth="400" MinHeight="360">

    <Grid>
        <ComboBox x:Name="comboBox" Margin="10,10,10,0" VerticalAlignment="Top" d:DataContext="{d:DesignInstance {x:Type ViewModel:HistoryViewModel}}" ItemsSource="{Binding HistoryList.Value}" SelectedIndex="{Binding HistoryIndex.Value, Mode=OneWayToSource}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Canvas x:Name="canvas" Margin="10,41,10,10" SizeChanged="canvas_SizeChanged" />

    </Grid>
</UserControl>
