        <TextBlock x:Name="appTitleText_Copy1" HorizontalAlignment="Left" Margin="220,10,0,0" TextWrapping="Wrap" Text="情報表示" VerticalAlignment="Top" RenderTransformOrigin="0.203,-0.313" FontSize="20"/>
