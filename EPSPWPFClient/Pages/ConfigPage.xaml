        <CheckBox x:Name="checkBox1_Copy3" Content="津波予報" HorizontalAlignment="Left" Margin="230,100,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox1_Copy4" Content="地震感知情報" HorizontalAlignment="Left" Margin="230,160,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox1_Copy5" Content="緊急地震速報（発表のみ）" HorizontalAlignment="Left" Margin="230,130,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="slider_Copy" HorizontalAlignment="Left" Margin="260,185,0,0" VerticalAlignment="Top" Width="100" Minimum="1" Maximum="4" Value="3" IsEnabled="False" />
        <TextBlock x:Name="textBlock_Copy5" HorizontalAlignment="Left" Margin="365,185,0,0" TextWrapping="Wrap" Text="レベル3" VerticalAlignment="Top" IsEnabled="False"/>
        <Slider x:Name="slider_Copy1" HorizontalAlignment="Left" Margin="260,73,0,0" VerticalAlignment="Top" Width="100" Minimum="1" Maximum="8" Value="1" />
        <TextBlock x:Name="textBlock_Copy6" HorizontalAlignment="Left" Margin="365,73,0,0" TextWrapping="Wrap" Text="震度1以上" VerticalAlignment="Top"/>

